<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bgr_dialog_common"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_25sdp">

<!--    <ImageView-->
<!--        android:layout_width="@dimen/_104sdp"-->
<!--        android:layout_height="@dimen/_104sdp"-->
<!--        android:src="@drawable/ic_warning" />-->

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:text="Cảnh báo"
        android:textColor="@color/black_212121"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:text="Vé đã được sử dụng"
        android:textAlignment="center"
        android:textColor="@color/black_212121"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_round_gray"
            android:text="Exit"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16" />


        <Button
            android:id="@+id/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_gradient_border_round"
            android:text="Restart"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16" />

    </LinearLayout>

</LinearLayout>